---
import "../styles/fonts.css"
import "../styles/base.css"
import "../styles/theme.css"
import "../styles/article.css"
import "../styles/links.css"
import BaseHead from "../components/BaseHead.astro";

const { class: className, ...rest } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead {...rest} />
    </head>
    <body class:list={["h-full flex bg-body-900 text-text-800 transition-colors", className]}>
        <div class="overlay z-0"></div>
        <div class="flex flex-col items-center w-full z-10">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    * {
        overflow-wrap: anywhere;
        word-break: normal;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        -webkit-mask-image: linear-gradient(0deg, transparent, black);
        background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.05)'><path d='M0 .5H31.5V32'/></svg>");
    }
</style>
